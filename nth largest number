import java.util.Scanner;
import java.util.Arrays;
public class sort
{
    public static void main(String[]args)
    {
        Scanner Scanner=new Scanner(System.in);
        int n;
        int a[]={1,2,3,4};
        int len=a.length;
        System.out.print("Enter the number:");
        n=Scanner.nextInt();
        Arrays.sort(a);
        System.out.print("the nth largest number:"+a[len-n]);
    }
}
        
